<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/theme_white"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <EditText
            android:id="@+id/search_et"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:drawableLeft="@mipmap/icon_map_search"
            android:paddingLeft="@dimen/theme_padding_10"
            android:drawablePadding="@dimen/theme_padding_drawable"
            android:layout_marginLeft="15dp"
            android:hint="搜索公司名称"
            android:textColorHint="@color/theme_text_grey"
            android:textColor="@color/theme_title"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/theme_text_14"
            android:background="@drawable/shape_rect_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        
        <TextView
            android:id="@+id/cancle_tv"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/theme_text"
            android:paddingLeft="@dimen/theme_padding"
            android:paddingRight="@dimen/theme_padding"
            android:text="取消"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

   

</LinearLayout>