<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".other.activitys.LoginOneActivity">

    <TextView
        android:id="@+id/tomain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入首页"
        android:textColor="@color/theme_focus"
        android:textSize="@dimen/theme_text"
        android:drawableRight="@drawable/icon_right_more"
        android:drawablePadding="@dimen/theme_padding_drawable"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.139"
        android:id="@+id/imageView" />

    <TextView
        android:text="账号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/theme_text"
        android:textColor="@color/theme_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.095"
        android:id="@+id/textView3" />

    <EditText
        android:hint="请输入账号"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_text"
        android:textColorHint="@color/theme_text_grey"
        android:background="@null"
        android:textSize="@dimen/theme_text"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.095"
        android:layout_marginBottom="-11dp"
        android:maxLength="11"
        android:inputType="phone"
        android:id="@+id/name_et" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#d6d6d6"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginTop="@dimen/theme_padding"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/theme_text"
        android:textColor="@color/theme_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintHorizontal_bias="0.095"
        android:id="@+id/password_tv" />

    <EditText
        android:hint="请输入密码"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_text"
        android:textColorHint="@color/theme_text_grey"
        android:background="@null"
        android:textSize="@dimen/theme_text"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/password_tv"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/password_tv"
        app:layout_constraintHorizontal_bias="0.095"
        android:layout_marginBottom="-11dp"
        android:maxLength="18"
        android:inputType="textPassword"
        android:id="@+id/password_et" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#d6d6d6"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="@id/password_tv"
        app:layout_constraintTop_toBottomOf="@id/password_tv"
        android:layout_marginTop="@dimen/theme_padding"
        app:layout_constraintEnd_toEndOf="parent" />



    <Button
        android:id="@+id/login_btn"
        android:text="登录"
        android:background="@drawable/drawable_login_btn"
        android:textColor="@color/theme_white"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_width="0dp"
        android:enabled="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/theme_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
