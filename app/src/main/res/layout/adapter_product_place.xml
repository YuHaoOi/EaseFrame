<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <TextView
        android:id="@+id/title_tv"
    android:layout_marginTop="@dimen/theme_padding_20"
    android:textSize="@dimen/theme_text_16sp"
    android:textColor="@color/theme_title"
    android:text="美容贷"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/title_tv"
        android:layout_marginTop="@dimen/theme_padding_5"
        android:textSize="@dimen/theme_text_14"
        android:textColor="@color/theme_text_grey"
        android:text="重庆市XX路XX网点"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        style="@style/ViewStyle" />

    <ImageView
        android:src="@mipmap/icon_map_checked"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>