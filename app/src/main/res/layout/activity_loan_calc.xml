<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.jlkf.jdsaleside.home.activitys.LoanCalcActivity">

    <include layout="@layout/aaa_app_title" />
    
    <LinearLayout
        android:background="@color/theme_focus"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:textColor="@color/theme_white"
                android:textSize="@dimen/theme_text_small"
                android:text="月还款额（元/月）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="17dp"
                android:textColor="@color/theme_white"
                android:textSize="26sp"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:alpha="0.5"
                android:textColor="@color/theme_white"
                android:textSize="@dimen/theme_text_small"
                android:text="(供参考)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            
        </LinearLayout>
        
        <View
            android:alpha="0.3"
            android:background="@color/theme_white"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:textColor="@color/theme_white"
                android:textSize="@dimen/theme_text_small"
                android:text="总还款额（元）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="17dp"
                android:textColor="@color/theme_white"
                android:textSize="26sp"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:alpha="0.5"
                android:textColor="@color/theme_white"
                android:textSize="@dimen/theme_text_small"
                android:text="(供参考)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/calc_rv"
        android:layout_marginTop="@dimen/theme_padding_10"
        android:descendantFocusability="beforeDescendants"
        android:fastScrollEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
