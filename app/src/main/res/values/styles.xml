<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:listDivider">@drawable/fore_bg_top_line</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ViewStyle">
        <item name="android:background">#dae1e6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="home_text">
        <item name="android:textSize">@dimen/theme_text</item>
        <item name="android:textColor">@color/theme_title_grey</item>
        <item name="android:layout_marginLeft">@dimen/theme_padding_20</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="idCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/theme_padding_25</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_text</item>
        <item name="android:textSize">@dimen/theme_text_16sp</item>
    </style>


    <style name="IdcardEdit">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/theme_padding</item>
        <item name="android:layout_marginLeft">105dp</item>
        <item name="android:textSize">@dimen/theme_text_16sp</item>
        <item name="android:textColor">@color/theme_title</item>
        <item name="android:drawablePadding">@dimen/theme_padding_drawable</item>
    </style>


    <style name="IdcardRl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/theme_white</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="IdcardTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">105dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_title</item>
        <item name="android:textSize">@dimen/theme_text_16sp</item>
    </style>
</resources>
